{
  "name": "l-o-l",
  "version": "1.0.0",
  "description": "Full stack chat with Elm and Node.js",
  "author": "RGBboy",
  "repository": {
    "type": "git",
    "url": "https://github.com/RGBboy/l-o-l.git"
  },
  "private": true,
  "main": "./lib/server",
  "scripts": {
    "start": "node ./lib/server",
    "bundle": "uglifyjs ./build/client.js -c warnings=false -m -o ./public/client.js",
    "build": "npm run build:client && npm run build:css && npm run build:server && npm run bundle",
    "build:css": "cp ./node_modules/tachyons/css/tachyons.min.css ./public/tachyons.min.css",
    "build:client": "elm-make ./src/Client.elm --output ./build/client.js",
    "build:server": "elm-make ./src/Server.elm --output ./build/server.js",
    "test": "elm-test src/Tests.elm"
  },
  "dependencies": {
    "ecstatic": "^1.4.0",
    "lodash": "^4.3.0",
    "tachyons": "^4.5.4",
    "elm-websocket-server": "^1.0.0"
  },
  "devDependencies": {
    "elm": "^0.18.0",
    "elm-test": "^0.18.2",
    "uglify-js": "^2.6.1"
  },
  "license": "ISC"
}
