{
  "name": "elm-chat",
  "version": "1.0.0",
  "description": "Full stack chat with Elm and Node.js",
  "author": "RGBboy",
  "repository": {
    "type": "git",
    "url": "https://github.com/RGBboy/elm-chat.git"
  },
  "private": true,
  "main": "./lib/server",
  "scripts": {
    "start": "node ./lib/server",
    "bundle": "uglifyjs ./build/client.js -c warnings=false -m -o ./public/client.js",
    "build": "npm run build:client && npm run build:css && npm run build:server && npm run bundle",
    "build:css": "cp ./node_modules/normalize.css/normalize.css ./public/style.css",
    "build:client": "elm-make ./src/Client.elm --output ./build/client.js",
    "build:server": "elm-make ./src/Server.elm --output ./build/server.js",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "dependencies": {
    "ecstatic": "^1.4.0",
    "lodash": "^4.3.0",
    "normalize.css": "^5.0.0",
    "uuid": "^2.0.1",
    "ws": "^1.0.0"
  },
  "devDependencies": {
    "elm": "^0.17.1",
    "uglify-js": "^2.6.1"
  },
  "license": "ISC"
}
